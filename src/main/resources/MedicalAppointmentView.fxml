<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.clinica.presentation.view.viewfx.MedicalAppointmentViewFX"
            style="-fx-background-color: #F7F9FC;">

    <!-- FORMULARIO -->
    <left>
        <VBox spacing="14"
              style="-fx-background-color: #FFFFFF;
                     -fx-background-radius: 12;
                     -fx-border-radius: 12;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Datos de la Cita Médica"
                   style="-fx-font-size: 18px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #1976D2;"/>

            <Separator/>

            <DatePicker fx:id="campoFecha"
                        promptText="Fecha de la cita"/>

            <ComboBox fx:id="campoHora"
                      promptText="Hora de la cita"/>

            <TextField fx:id="campoTipoCita"
                       promptText="Tipo de cita (Consulta, Control, Emergencia)"/>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button fx:id="btnLimpiar"
                        text="Limpiar"
                        style="-fx-background-color: #E0E0E0;"/>

                <Button fx:id="btnGuardar"
                        text="Guardar"
                        style="-fx-background-color: #1976D2;
                               -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </left>

    <!-- TABLA -->
    <center>
        <VBox spacing="12"
              style="-fx-background-color: #FFFFFF;
                     -fx-background-radius: 12;
                     -fx-border-radius: 12;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Lista de Citas Médicas"
                   style="-fx-font-size: 18px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #1976D2;"/>

            <Separator/>

            <TableView fx:id="tablaCitas"
                       VBox.vgrow="ALWAYS">

                <columns>
                    <TableColumn fx:id="colFecha" text="Fecha"/>
                    <TableColumn fx:id="colHora" text="Hora"/>
                    <TableColumn fx:id="colTipo" text="Tipo de Cita"/>
                </columns>
            </TableView>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button fx:id="btnSeleccionar"
                        text="Seleccionar"
                        style="-fx-background-color: #90CAF9;"/>

                <Button fx:id="btnEliminar"
                        text="Eliminar"
                        style="-fx-background-color: #D32F2F;
                               -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
